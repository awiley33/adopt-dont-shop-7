<h1>Pets applied for by <%= @application.name %></h1>

<% @pet_applications.each do |pet_application| %>
<div id="<%= pet_application.pet.name %>" >
<%= pet_application.pet.name %>
<%= pet_application.status %>
<%= button_to "Approve Adoption of #{pet_application.pet.name}", "/admin/applications/#{@application.id}", method: :patch, params: {pet_application_id: pet_application.id, pet_id: pet_application.pet.id} %>
</div>
<% end %>